<Window x:Class="OverlayControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverlayControl"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Closing="MainWindow_Closing" x:Name="mainWindow" Title="OverlayControl" Height="180" Width="710"
        ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="txtPlayer1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"
             VerticalAlignment="Top" Width="200" Margin="64,13,0,0"/>
        <Label x:Name="lblPlayer1" Content="Player 1:" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="10,10,0,0" Width="54" Height="26"/>
        <TextBox x:Name="txtPlayer2" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap"
             VerticalAlignment="Top" Width="200" Margin="64,44,0,0"/>
        <Label x:Name="lblPlayer2" Content="Player 2:" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="10,44,0,0" Width="54" Height="25"/>
        <Label x:Name="lblCharacter1" Content="Character:" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="269,13,0,0" Width="65" Grid.ColumnSpan="2" Height="26"/>
        <Label x:Name="lblCharacter2" Content="Character:" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="269,44,0,0" Width="65" Height="26"/>
        <ComboBox x:Name="cmbChar1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="176"
              Margin="334,13,0,0" Height="26"/>
        <ComboBox x:Name="cmbChar2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="176"
              Margin="334,44,0,0" Height="25"/>
        <ComboBox x:Name="cmbMoon1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="514,14,0,0"
              Height="25"/>
        <ComboBox x:Name="cmbMoon2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="514,44,0,0"
              Height="25"/>
        <TextBox x:Name="txtScore1" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap"
             VerticalAlignment="Top" Width="36" Margin="601,14,0,0"/>
        <TextBox x:Name="txtScore2" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap"
             VerticalAlignment="Top" Width="36" Margin="601,44,0,0"/>
        <Button Click="btnSwap_Click" x:Name="btnSwap" Content="Swap" VerticalAlignment="Top" Margin="448,106,0,0"
            Height="23" HorizontalAlignment="Left" Width="115"/>
        <Button Click="btnUpdate_Click" x:Name="btnUpdate" Content="Update Layout" VerticalAlignment="Top"
            Margin="569,106,0,0" Height="23" HorizontalAlignment="Left" Width="115"/>
        <TextBox x:Name="txtCommentators" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"
             VerticalAlignment="Top" Width="210" Margin="105,106,0,0"/>
        <Label x:Name="lblCommentary" Content="Commentators:" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="10,103,0,0" Width="90" Height="26"/>
        <TextBox x:Name="txtRound" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"
             VerticalAlignment="Top" Width="252" Margin="432,75,0,0"/>
        <Label x:Name="lblRound" Content="Round:" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="382,72,0,0" Width="50" Height="26"/>
        <Button Click="btnSyncToMelty_Click" x:Name="btnSyncToMelty" Content="Sync to MBAACC"
            HorizontalAlignment="Left" VerticalAlignment="Top" Width="115" Margin="327,106,0,0" Height="23"/>
        <TextBox x:Name="txtTournament" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"
             VerticalAlignment="Top" Width="287" Margin="85,75,0,0"/>
        <Label x:Name="lblTournament" Content="Tournament:" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="10,72,0,0" Width="75" Grid.RowSpan="2" Height="26"/>
        <Button Click="BtnImage1_Click" x:Name="btnImage1" Content="Image" HorizontalAlignment="Left"
            VerticalAlignment="Top" Width="42" Margin="642,14,0,0" Height="25"/>
        <Button Click="BtnImage2_Click" x:Name="btnImage2" Content="Image" HorizontalAlignment="Left"
            VerticalAlignment="Top" Width="42" Margin="642,44,0,0" Height="25"/>
    </Grid>
</Window>